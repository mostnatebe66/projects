@model HrPortal.Models.CategoryVM

@{
    ViewBag.Title = "AddCategory";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Add Category</h3>
        @Html.ActionLink("Return to List", "ViewCategories", "Category")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            <fieldset>
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label>Category</label>
                    @Html.TextBoxFor(p => p.category.Name, new { @class = "form-control", placeholder = "Category" })
                    <p style="color: red">@Html.ValidationMessageFor(p => p.category.Name)</p>
                </div>
                <button type="submit" class="btn btn-sm btn-primary">Save</button>
            </fieldset>
        }
    </div>
</div>
