﻿@model BaseballLeague.Models.Player

@{
    ViewBag.Title = "DeletePlayer";
}

<h3>Delete Player</h3>

<div class="row">
    <div class="col-md-2">Are you sure that you want to delete this player?</div>
</div>
@using (Html.BeginForm("DeletePlayer", "Admin"))
{
    @Html.HiddenFor(m => m.PlayerID)
    @Html.HiddenFor(m => m.TeamID)

    <h3>@Model.FName @Model.LName </h3>

    <br />

    <div class="row">
        <div class="col-md-2 "><strong>Jersey Number:</strong></div>
        <div class="col-md-10 text-left">@Model.JerseyNum</div>
    </div>

    <div class="row">
        <div class="col-md-2 "><strong>Current Position:</strong></div>
        <div class="col-md-10 text-left">@Model.PlayerPosition</div>
    </div>

    <div class="row">
        <div class="col-md-2 "><strong>Batting Average:</strong></div>
        <div class="col-md-10 text-left">@Model.BattingAVG</div>
    </div>

    <div class="row">
        <div class="col-md-2 "><strong>Years Played:</strong></div>
        <div class="col-md-10 text-left">@Model.YearsPlayed</div>
    </div>


    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "AdminPlayerList", "Admin", null, new { @class = "btn btn-sm btn-info" })
}