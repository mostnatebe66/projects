@model HrPortal.Models.PolicyVM

@{
    ViewBag.Title = "AddPolicy";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Add Policy</h3>
        @Html.ActionLink("Return to List", "Policy", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            <fieldset>
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label>Policy</label>
                    @Html.TextBoxFor(p => p.Policy.Name, new { @class = "form-control", placeholder = "Policy" })
                    <p style="color: red">@Html.ValidationMessageFor(p => p.Policy.Name)</p>
                </div>
                <div class="form-group">
                    <label>Category</label>
                    @*@Html.DropDownListFor(p => p.Policy.CategoryID, Model.Categories, new { @class = "form-control", name = "ID", placeholder = "Policy" })*@
                    @Html.DropDownList("CategoryID", Model.Categories, new { @class = "form-control", placeholder = "Policy" })
                </div>
                <div class="form-group">
                    <label>Content</label>
                    @Html.TextArea("content", new { @class = "form-control", rows = 12 })
                </div>
                <button type="submit" class="btn btn-sm btn-primary">Save</button>
            </fieldset>
        }
    </div>
</div>

